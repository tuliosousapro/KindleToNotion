{
  "manifest_version": 3,
  "name": "Kindle2Notion Extension",
  "version": "1.2.7",
  "description": "Export Kindle highlights and notes to Notion seamlessly.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://ler.amazon.com.br/notebook*",
    "https://read.amazon.com/notebook*",
    "https://api.notion.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://ler.amazon.com.br/notebook*",
        "https://read.amazon.com/notebook*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "96": "icons/icon96.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}